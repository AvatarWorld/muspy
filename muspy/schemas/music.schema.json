{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MusPy JSON schema v0.0",
    "description": "A simple, intuitive format for symbolic music",
    "type": "object",
    "properties": {
        "resolution": {
            "description": "Time steps per beat",
            "type": "integer"
        },
        "tempos": {
            "description": "Tempo changes",
            "type": ["array", "null"],
            "items": {
                "type": "object",
                "properties": {
                    "time": {
                        "description": "Event time",
                        "type": "integer"
                    },
                    "tempo": {
                        "description": "Tempo in qpm (quarters per minute)",
                        "type": "number"
                    }
                }
            }

        },
        "key_signatures": {
            "description": "Key signature changes",
            "type": ["array", "null"],
            "items": {
                "type": "object",
                "properties": {
                    "time": {
                        "description": "Event time",
                        "type": "integer"
                    },
                    "root": {
                        "description": "Root: {A, B, C, D, E, F, G} with optional accidentals {#, b, ##, bb}",
                        "type": "string"
                    },
                    "mode": {
                        "description": "Mode: {major, minor}",
                        "enum": ["major", "minor"]
                    }
                }
            }
        },
        "time_signatures": {
            "description": "Time signature changes",
            "type": ["array", "null"],
            "items": {
                "type": "object",
                "properties": {
                    "time": {
                        "description": "Event time",
                        "type": "integer"
                    },
                    "numerator": {
                        "description": "Numerator of time signature",
                        "type": "integer"
                    },
                    "denominator": {
                        "description": "Denominator of time signature",
                        "type": "integer"
                    }
                }
            }
        },
        "downbeats": {
            "description": "Downbeat positions",
            "type": ["array", "null"],
            "items": {
                "description": "Downbeat time",
                "type": "integer"
            }
        },
        "lyrics": {
            "description": "Global lyrics",
            "type": ["array", "null"],
            "items": {
                "type": "object",
                "properties": {
                    "time": {
                        "description": "Event time",
                        "type": "integer"
                    },
                    "lyric": {
                        "description": "Content of lyric",
                        "type": "string"
                    }
                }
            }
        },
        "annotations": {
            "description": "Global annotations",
            "type": ["array", "null"],
            "items": {
                "type": "object",
                "properties": {
                    "time": {
                        "description": "Event time",
                        "type": "integer"
                    },
                    "annotation": {
                        "description": "Content of annotation"
                    },
                    "group": {
                        "description": "Annotation group",
                        "type": ["string", "null"]
                    }
                }
            }
        },
        "tracks": {
            "description": "Tracks",
            "type": ["array", "null"],
            "items": {
                "type": "object",
                "properties": {
                    "program": {
                        "description": "# Program number (according to General MIDI specification)",
                        "type": "integer"
                    },
                    "is_drum": {
                        "description": "A boolean indicator that indicates whether it is a percussion track",
                        "type": "boolean"
                    },
                    "name": {
                        "description": "Name of track",
                        "type": ["string", "null"]
                    },
                    "notes": {
                        "description": "Notes",
                        "type": ["array", "null"],
                        "items": {
                            "type": "object",
                            "properties": {
                                "time": {
                                    "description": "Start time",
                                    "type": "integer"
                                },
                                "duration": {
                                    "description": "Note duration",
                                    "type": "integer"
                                },
                                "pitch": {
                                    "description": "Note pitch",
                                    "type": "integer"
                                },
                                "velocity": {
                                    "description": "Note velocity",
                                    "type": "integer"
                                }
                            }
                        }
                    },
                    "chords": {
                        "description": "Chords",
                        "type": ["array", "null"],
                        "items": {
                            "type": "object",
                            "properties": {
                                "time": {
                                    "description": "Start time",
                                    "type": "integer"
                                },
                                "duration": {
                                    "description": "Chord duration",
                                    "type": "integer"
                                },
                                "pitches": {
                                    "description": "Note pitches",
                                    "type": ["array", "null"],
                                    "items": {
                                        "description": "Note pitch",
                                        "type": "integer"
                                    }
                                },
                                "velocity": {
                                    "description": "Chord velocity",
                                    "type": "integer"
                                }
                            }
                        }
                    },
                    "lyrics": {
                        "description": "Track-specific lyrics",
                        "type": ["array", "null"],
                        "items": {
                            "type": "object",
                            "properties": {
                                "time": {
                                    "description": "Event time",
                                    "type": "integer"
                                },
                                "lyric": {
                                    "description": "Content of lyric",
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "annotations": {
                        "description": "Track-specific annotations",
                        "type": "array",
                        "items": {
                            "type": ["object", "null"],
                            "properties": {
                                "time": {
                                    "description": "Event time",
                                    "type": "integer"
                                },
                                "annotation": {
                                    "description": "Content of annotation"
                                },
                                "group": {
                                    "description": "Annotation group",
                                    "type": ["string", "null"]
                                }
                            }
                        }
                    }
                }
            }
        },
        "meta": {
            "description": "Meta data",
            "type": "object",
            "properties": {
                "version": {
                    "description": "Schema version",
                    "type": "string",
                    "pattern": "[0-9].[0-9]"
                },
                "song": {
                    "description": "Song information",
                    "type": "object",
                    "properties": {
                        "title": {
                            "description": "Song title",
                            "type": ["string", "null"]
                        },
                        "artist": {
                            "description": "Main artist of the song",
                            "type": ["string", "null"]
                        },
                        "creators": {
                            "description": "Creators of the song",
                            "type": ["array", "null"],
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "source": {
                    "description": "Source information",
                    "type": "object",
                    "properties": {
                        "collection": {
                            "description": "Name of the collection",
                            "type": ["string", "null"]
                        },
                        "filename": {
                            "description": "Name of the source file",
                            "type": ["string", "null"]
                        },
                        "format": {
                            "description": "Format of the source file {midi, musicxml, abc, null}",
                            "type": ["string", "null"]
                        },
                        "copyright": {
                            "description": "Copyright notice of the source file",
                            "type": ["string", "null"]
                        }
                    }
                }
            }
        }
    }
}
